<footer id="footer">
	<ul>
		<li><%= link_to 'Contact', contact_path %></li>
		<li><%= link_to 'Subscribe', 'javascript:void(0)', class: "subscribe-link" %></li>
		<li><%= link_to "Delivery", delivery_path %></li>
		<li><%= link_to "Returns", returns_path %></li>
		<li><%= link_to "Legal", legal_path %></li>
		<li><%= link_to "Follow Us", 'javascript:void(0)', class: "follow-link" %></li>
	</ul>
</footer>

<div class="cover-fade"></div>

<div class="subscribe-box">
	<%= link_to image_tag("cross.svg", class: "subscribe-exit"), "javascript:void(0)" %>
	<h1>Subscribe to LUKE MACAULEY</h1>
	<div id="mc_subscribe_form">
    <input type="text" placeholder="First Name" name="firstname" id="firstname"></input>
    <input type="text" placeholder="Last Name" name="lastname" id="lastname"></input>
    <input type="email" placeholder="Email Address" id="email"></input>
    <input type="submit" value="Subscribe" id="subscribe_button"></input>
  </div>
</div>

<div class="social-box">
	<h1>Follow LUKE MACAULEY</h1>
	<%= link_to image_tag("cross.svg", class: "social-exit"), "javascript:void(0)" %>
	<div>
		<%= link_to image_tag("facebook.svg", class: "facebook-logo"), "http://www.facebook.com/lukemacauley", target: '_blank' %>
		<%= link_to image_tag("twitter.svg", class: "twitter-logo"), "http://www.twitter.com/lukemacauley", target: '_blank' %>
		<%= link_to image_tag("instagram.svg", class: "instagram-logo"), "http://www.instagram.com/lukemacauley", target: '_blank' %>
	</div>
</div>